use strict;
use lib '/var/www/vhosts/payonline.epfl.ch/cgi-bin/formcont';
use payonline_tools;

$payonline_tools::DEBUG	 = 0;

#warn "getPrix..\n";

print qq{Content-Type: text/plain; charset=UTF-8
Access-Control-Allow-Origin: *\n\n};

my $sql = qq{select montant from prix order by montant + 0};
my $sth = payonline_tools::dbquery ($sql);

print qq{
<select name="Total">
<option value="">--</option>
};

while (my ($montant) = $sth->fetchrow) {
	print qq{<option value="cours:$montant">$montant CHF</option>};

#warn " >> $montant\n";

}
print qq{
</select >
};
